{% extends 'base.html.twig' %}

{% block header %}
    {{ parent()}}
    {% include '/layouts/menu.html.twig' %}
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {{ parent() }}
    <link rel="stylesheet" media="screen" type="text/css" href="{{ asset('css/product.css') }}">
{% endblock %}

{% block body %}

    <h1>Create new product</h1>
    <div class="container">
        {{ form_start(form) }}
        <div class="inner">
            {{ form_row(form.libelle) }}
            {{ form_row(form.prix) }}
        </div>
        {{ form_row(form.enstock) }}
        <button type="submit" class="btn btn-primary">Save</button>
        {{ form_end(form) }}
    </div>
{% endblock %}